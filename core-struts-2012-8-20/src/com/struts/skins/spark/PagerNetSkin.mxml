<?xml version="1.0" encoding="utf-8"?>
<s:SparkSkin xmlns:fx="http://ns.adobe.com/mxml/2009" 
			 xmlns:s="library://ns.adobe.com/flex/spark" 
			 xmlns:mx="library://ns.adobe.com/flex/mx" 
			 xmlns:controls="com.struts.controls.*" 
			 minHeight="35" minWidth="400">
	
	
	<fx:Metadata>
		[HostComponent("com.struts.components.PagerNet")]
	</fx:Metadata>
	
	<fx:Script>
		<![CDATA[
			
			override protected function updateDisplayList(unscaledWidth : Number,unscaledHeight : Number):void
			{

				
				if(!isNaN(getStyle("cornerRadius")))
				{
					fill.radiusX = getStyle("cornerRadius");
					fill.radiusY = getStyle("cornerRadius");
				}
				
				var gradientColors : Array = getStyle("gradientColors");
				
				if(gradientColors && gradientColors.length > 1)
				{
					gradient1.color = uint(gradientColors[0]);
					gradient2.color = uint(gradientColors[1]);
				}
				
				super.updateDisplayList(unscaledWidth,unscaledHeight);

			}
			
		]]>
	</fx:Script>
	
	<s:states>
		<s:State name="normal" />
		<s:State name="disabled" />
	</s:states>
	
	<s:Rect id="fill" left="1" right="1" top="5" bottom="5" radiusX="8" radiusY="8">
		<s:fill>
			<s:LinearGradient rotation="90">
				<s:GradientEntry id="gradient1" color="#efefef" />
				<s:GradientEntry id="gradient2" color="#c1c1c1"/>				
			</s:LinearGradient>
		</s:fill>
		<s:stroke>
			<s:SolidColorStroke color="0xD1D1D1" />
		</s:stroke>
	</s:Rect>
	
	<s:Group id="pagerGroup" width="100%" height="100%">

		<s:layout>
			<s:HorizontalLayout paddingLeft="20" paddingRight="20" gap="20" 
								horizontalAlign="center" verticalAlign="middle" />
		</s:layout>
		
		<s:Label id="sumDisplayLabel" />
	
		<s:Label id="pageDisplayLabel" />
	
		<s:Button id="parButton" 
				  skinClass="com.struts.skins.spark.pagers.PagerParSkin" />
		
		<s:ButtonBar id="pageButtonBar" requireSelection="true"
					 skinClass="com.struts.skins.spark.pagers.PagerButtonBarSkin"/>

		<s:Button id="nextButton" 
				  skinClass="com.struts.skins.spark.pagers.PagerNextSkin" />
		
		<!--
		<s:TextInput id="pageNumTextInput"
					 width="30" contentBackgroundColor="0xd8d8d8"
				 	 skinClass="com.missiongroup.skins.spark.pagers.PagerNumTextInputSkin" />
		-->
		
	</s:Group>

	
</s:SparkSkin>


















