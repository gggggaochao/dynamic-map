<!--- The default skin class for the Spark Button component.  

       @see spark.components.Button
        
      @langversion 3.0
      @playerversion Flash 10
      @playerversion AIR 1.5
      @productversion Flex 4
-->
<s:SparkButtonSkin xmlns:fx="http://ns.adobe.com/mxml/2009" 
             xmlns:s="library://ns.adobe.com/flex/spark" 
             xmlns:fb="http://ns.adobe.com/flashbuilder/2009"
             minWidth="21" minHeight="21" 
             alpha.disabled="0.5">
     
    <fx:Metadata>
        <![CDATA[ 
        /** 
         * @copy spark.skins.spark.ApplicationSkin#hostComponent
         */
        [HostComponent("com.struts.components.MButton")]
        ]]>
    </fx:Metadata>
    
    <fx:Script>
        <![CDATA[         

			[Bindable]
			private var glowColor : uint = 0x666666;
			
			[Bindable]
			private var glowDownColor : uint = 0x111111;
            /**
             *  @private
             */
            override protected function updateDisplayList(unscaledWidth:Number, unscaledHeight:Number) : void
            {
                super.updateDisplayList(unscaledWidth, unscaledHeight);
				
				var source : Object = getStyle("backgroundImage");
				if(source)
				{
					backgrondImg.source = source;
				}
				
				//var isPadding : Boolean = false;
				if(!isNaN(getStyle("overGlowColor")))
				{
					glowColor = uint(getStyle("overGlowColor"));
				}
				
				if(!isNaN(getStyle("downGlowColor")))
				{
					glowDownColor = uint(getStyle("downGlowColor"));
				}
//				
//				if(!isNaN(getStyle("paddingTop"))
//				{
//					isPadding = true;
//					labelDisplay.setStyle("paddingTop",getStyle("paddingTop"));
//				}
//				
//				if(!isPadding)
//				{
//					labelDisplay.setStyle("textAlign","center");
//					labelDisplay.setStyle("verticalAlign","middle");
//				}
            }
            

                                 
			protected function backgrondImg_completeHandler(event:Event):void
			{
				this.width = backgrondImg.sourceWidth;
				this.height = backgrondImg.sourceHeight;
			}
			
		]]>        
    </fx:Script>
        
    <!-- states -->
    <s:states>
        <s:State name="up" />
        <s:State name="over" />
        <s:State name="down" />
        <s:State name="disabled" />
    </s:states>
    
	<s:BitmapImage id="backgrondImg" 
				   smooth="true" 
				   complete="backgrondImg_completeHandler(event)">
		<s:filters>
			<s:GlowFilter id="glowFilter" 
						  color="{glowColor}" color.down="{glowDownColor}" 
						  alpha="0" alpha.over="1" alpha.down="1" 
						  strength="2" blurX="15" blurY="15" />
		</s:filters>
	</s:BitmapImage>
    <!-- layer 8: text -->
    <!--- @copy spark.components.supportClasses.ButtonBase#labelDisplay  -->
    <s:Label id="labelDisplay"
             maxDisplayedLines="1" 
			 textAlign="center" verticalAlign="middle"
             left="0" right="0" top="0" bottom="0">
    </s:Label>
    
</s:SparkButtonSkin>
