<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mx="library://ns.adobe.com/flex/mx">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("com.struts.components.ColorChooser")]
	</fx:Metadata>
	<fx:Script>
		<![CDATA[
			import mx.events.FlexEvent;
			
			[Bindable]
			[Embed(source="/resources/images/colors.png")]
			public  var colorsBackground : Class;
			
			
		]]>
	</fx:Script>
	
	<!-- SkinParts
	name=labelDisplay, type=spark.components.Label, required=false
	name=pickButton, type=spark.components.Button, required=false
	name=colorBox, type=spark.components.BorderContainer, required=false
	name=colorImage, type=spark.components.Image, required=false
	-->
	
	
	
	<s:VGroup top="0" left="0" right="0" bottom="0" gap="4">
		
		<s:Image id="colorImage" source="{colorsBackground}" smooth="true"/>
		
		<s:Group left="0" right="0">
			
			<s:TextInput id="labelDisplay" editable="false" paddingLeft="20" width="80" verticalCenter="0"/>
		
			<s:BorderContainer id="colorBox" width="12" height="12" left="6" verticalCenter="0" />
		</s:Group>
		
	</s:VGroup>
	
	<s:Button id="pickButton" width="12" height="12" emphasized="true" 
			  skinClass="com.struts.skins.spark.colors.PickerButtonSkin" />
	
</s:Skin>

